<!-- Importando o Chart.js direto do CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  // Gráfico de Vendas
  const ctxVendas = document.getElementById('graficoVendas').getContext('2d');
  new Chart(ctxVendas, {
    type: 'line',
    data: {
      labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
      datasets: [{
        label: 'Vendas (R$)',
        data: [1200, 1900, 3000, 2500, 3200, 4000],
        borderColor: '#2563eb',
        backgroundColor: 'rgba(37, 99, 235, 0.2)',
        tension: 0.4,
        fill: true
      }]
    },
    options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
  });

  // Gráfico de Tópicos Mais Acessados
  const ctxAcessos = document.getElementById('graficoAcessos').getContext('2d');
  new Chart(ctxAcessos, {
    type: 'doughnut',
    data: {
      labels: ['Tutoriais', 'Projetos', 'Notícias', 'Doações'],
      datasets: [{
        label: 'Acessos',
        data: [40, 25, 20, 15],
        backgroundColor: ['#2563eb', '#3b82f6', '#60a5fa', '#93c5fd']
      }]
    },
    options: { responsive: true, plugins: { legend: { position: 'right' } } }
  });

  // Gráfico de Lucros
  const ctxLucros = document.getElementById('graficoLucros').getContext('2d');
  new Chart(ctxLucros, {
    type: 'bar',
    data: {
      labels: ['2021', '2022', '2023', '2024'],
      datasets: [{
        label: 'Lucros (R$ mil)',
        data: [15, 25, 35, 50],
        backgroundColor: '#2563eb'
      }]
    },
    options: { responsive: true, plugins: { legend: { display: false } } }
  });
</script>

